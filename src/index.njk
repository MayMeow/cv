---
layout: cv.njk
eleventyComputed:
  pageTitle: "{{ site.title }}"
---
{% set education = collections.education | sort(attribute='data.order') %}
{% set work = collections.work | sort(attribute='data.order') %}
{% set projects = collections.projects | sort(attribute='data.order') %}

<div class="min-h-dvh min-w-[320px] bg-white text-gray-800">
  <!-- Info -->
  <div class="container mx-auto max-w-(--breakpoint-lg) p-4 lg:p-8">
    <div class="grid grid-cols-1 md:mt-12 md:grid-cols-6">
      <!-- Personal -->
      <div class="p-5 text-left md:col-span-2 md:text-right">
        <img
          class="inline-block md:w-2/3"
          src="/{{ site.profile.portrait }}"
          alt="Portrait of {{ site.hero.name }}"
        />
        <div class="mt-5 space-y-2">
          <p>{{ site.profile.location }}</p>
          <p>signal: {{ site.profile.signal }}</p>
          <p>
            email:
            <a
              class="font-medium text-black underline hover:text-black/75"
              href="{{ site.profile.email.url }}"
            >{{ site.profile.email.label }}</a>
          </p>
          <p>
            pgp:
            <a
              class="font-medium text-black underline hover:text-black/75"
              href="{{ site.profile.pgp.url }}"
            >{{ site.profile.pgp.label }}</a>
          </p>
          <p>
            <a
              class="font-medium text-black underline hover:text-black/75"
              href="{{ site.profile.website }}"
            >{{ site.profile.website }}</a>
          </p>
        </div>
      </div>
      <!-- END Personal -->

      <!-- Intro -->
      <div class="p-5 md:col-span-4">
        <h1 class="text-xl font-semibold">{{ site.hero.headline }}</h1>
        <h2 class="text-5xl leading-tight font-bold">{{ site.hero.name }}</h2>
        <div class="my-5 h-1 rounded-sm bg-purple-500"></div>
        <p class="text-lg leading-relaxed text-slate-600">
          {{ site.hero.summary }}
        </p>
      </div>
      <!-- END Intro -->
    </div>
  </div>
  <!-- END Info -->

  <!-- Bio -->
  <div class="container mx-auto max-w-(--breakpoint-lg) space-y-10 p-4 lg:p-8">
    <!-- Education -->
    <div class="grid grid-cols-1 md:grid-cols-6">
      <div class="px-5 py-2 text-left md:col-span-2 md:text-right">
        <h3 class="text-lg font-bold uppercase">Education</h3>
      </div>
      <div class="space-y-6 px-5 py-2 md:col-span-4">
        {% for item in education %}
        <div>
          <h4 class="mb-2 text-lg font-semibold text-indigo-700">
            {{ item.data.years }}
          </h4>
          <h5 class="mb-1 font-bold">{{ item.data.title }}</h5>
          {% if item.data.description %}
          <p class="leading-relaxed">
            {{ item.data.description }}
          </p>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </div>
    <!-- END Education -->

    <!-- Work Experience -->
    <div class="grid grid-cols-1 md:grid-cols-6">
      <div class="px-5 py-2 text-left md:col-span-2 md:text-right">
        <h3 class="text-lg font-bold uppercase">Work Experience</h3>
      </div>
      <div class="space-y-6 px-5 py-2 md:col-span-4">
        {% for item in work %}
        <div>
          <h4 class="mb-2 text-lg font-semibold text-indigo-700">
            {{ item.data.years }}
          </h4>
          <h5 class="mb-1 font-bold">
            {{ item.data.role }}{% if item.data.organization %} at {{ item.data.organization }}{% endif %}
          </h5>
          <p class="leading-relaxed">
            {{ item.data.description }}
          </p>
        </div>
        {% endfor %}
      </div>
    </div>
    <!-- END Work Experience -->

    <!-- Projects -->
    <div class="grid grid-cols-1 md:grid-cols-6">
      <div class="px-5 py-2 text-left md:col-span-2 md:text-right">
        <h3 class="text-lg font-bold uppercase">Projects</h3>
      </div>
      <div class="space-y-6 px-5 py-2 md:col-span-4">
        {% for project in projects %}
        <div>
          <h4 class="mb-2 text-lg font-semibold text-indigo-700">
            {{ project.data.stack }}
          </h4>
          <h5 class="mb-1 font-bold">
            {{ project.data.title }} -
            <a
              class="font-medium text-black underline hover:text-black/75"
              href="{{ project.data.linkUrl }}"
            >{{ project.data.linkLabel }}</a>
          </h5>
          <p class="leading-relaxed">
            {{ project.data.description }}
          </p>
        </div>
        {% endfor %}
      </div>
    </div>
    <!-- END Projects -->

    <!-- Tech Stack -->
    <div class="grid grid-cols-1 md:grid-cols-6">
      <div class="px-5 py-2 text-left md:col-span-2 md:text-right">
        <h3 class="text-lg font-bold uppercase">Tech Stack</h3>
      </div>
      <div class="space-y-6 px-5 py-2 md:col-span-4">
        {% for group in techStack %}
        <div>
          <h4 class="mb-2 text-lg font-semibold text-green-700">
            {{ group.category }}
          </h4>
          <p class="leading-relaxed text-slate-700">
            {{ group.items | join(", ") }}
          </p>
        </div>
        {% endfor %}
      </div>
    </div>
    <!-- END Tech Stack -->

    <!-- Social -->
    <div class="grid grid-cols-1 md:grid-cols-6">
      <div class="px-5 py-2 text-left md:col-span-2 md:text-right">
        <h3 class="text-lg font-bold uppercase">Social</h3>
      </div>

      <div class="space-y-6 px-5 py-2 md:col-span-4">
        {% for social in socials %}
        <div>
          <h4 class="mb-2 text-lg font-semibold {{ social.accentClass }}">
            {{ social.platform }}
          </h4>
          <h5 class="mb-1 font-bold">
            {{ social.title }} -
            <a
              class="font-medium text-black underline hover:text-black/75"
              href="{{ social.url }}"
            >{{ social.url }}</a>
          </h5>
        </div>
        {% endfor %}

        <!-- Footer -->
        <footer class="space-y-2 py-12 text-sm text-gray-600">
          <p class="font-semibold">
            {{ site.footer.label }} &copy;
            <script>
              document.write(new Date().getFullYear());
            </script>
          </p>
          <p class="inline-flex flex-wrap items-center gap-1">
            <span>Crafted with</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              data-slot="icon"
              class="hi-mini hi-heart inline-block size-5 text-rose-500"
            >
              <path
                d="m9.653 16.915-.005-.003-.019-.01a20.759 20.759 0 0 1-1.162-.682 22.045 22.045 0 0 1-2.582-1.9C4.045 12.733 2 10.352 2 7.5a4.5 4.5 0 0 1 8-2.828A4.5 4.5 0 0 1 18 7.5c0 2.852-2.044 5.233-3.885 6.82a22.049 22.049 0 0 1-3.744 2.582l-.019.01-.005.003h-.002a.739.739 0 0 1-.69.001l-.002-.001Z"
              />
            </svg>
            <span>by {{ site.author }}</span>
            <span>
              | Theme by
              <a
                class="font-medium text-black underline hover:text-black/75"
                href="{{ site.footer.authorUrl }}"
              >{{ site.footer.authorName }}</a>
              | Built with <a class="font-medium text-black underline hover:text-black/75" href="https://www.11ty.dev/">11ty</a>
            </span>
          </p>
        </footer>
        <!-- END Footer -->
      </div>
    </div>
    <!-- END Social -->
  </div>
  <!-- END Bio -->
</div>
<!-- END Page Container -->
